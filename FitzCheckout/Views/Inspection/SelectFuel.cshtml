@model FitzCheckout.Models.ChecklistVM

@{
    ViewBag.Title = "Select Fuel";
}

<h2>Select Fuel</h2>

@using (Html.BeginForm())
{
     
    <div class="form-horizontal">
        <h4>Select Your Fuel for @Model.MetaDataValue7</h4>
        <hr />
        <div class="form-group">
            <select class="form-control" name="FuelType">
                <option value=" ">Select Fuel</option>
                <option value="('ALL', 'ICHYBRID', 'IC')">Gasoline/Diesel</option>
                <option value="('ALL', 'ICHYBRID', 'HYBRID')">Hybrid</option>
                <option value="('ALL', 'EV')">EV</option>
            </select>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
