@model List<FitzCheckout.DAL.ChecklistHistory>

<table id="basicHistory" class="display" style="width:100%">
    <thead>
        <tr>
            <th>Date</th>
            <th>User</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>@Model[i].DateUpdated</td>
                <td>@Model[i].UserID</td>
                <td>@Model[i].Status</td>
                <td>@Model[i].Action</td>
            </tr>
        }
    </tbody>
</table>

<script>
    $(document).ready(function () {
        $('#basicHistory').DataTable({
            deferRender: true,
            scrollY: '75vh',
            scrollCollapse: true,
            scroller: true,
            searching: false,
            paging: false,
            autoWidth: true
        });

    });
</script>

